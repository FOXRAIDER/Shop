<div class = "container">
  <a class = "font-weight-bold h1 ">Sing in</a>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container col-5">
      <%= f.label(:email, {:class => 'mt-4'})%><br />
      <%= f.email_field(:email, {:class => 'form-control ', autofocus: true, autocomplete: "email", placeholder: "Enter email ..."}) %>
      <%= f.label(:password, {:class => 'mt-4'})%><br />
      <%= f.password_field(:password, {:class => 'form-control', autocomplete: "current-password", placeholder: "Enter password ..."}) %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-control col-5 mt-4 ">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="botton mx-auto">
      <%= f.submit("Create New User",{:class => 'btn btn-outline-dark mt-4', autocomplete: "Log in"} )%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
