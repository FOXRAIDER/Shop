    <div class="container ">
        <div class = "row">
        <% @page.each do |page| %>
            <div class="card-deck mb-3 text-center col-sm-3">
                <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal"><%= page.title %></h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title"> <small class="text-muted"></small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                    <li><%= page.body %></li>
                    </ul>
                    <button type="button" class="btn btn-lg btn-block btn-outline-primary">$<%= page.price%></button>
                </div>
                </div>
            </div>
            <% end %>

        </div>
    </div>
    
